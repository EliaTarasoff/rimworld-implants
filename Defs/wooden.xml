<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>WoodenProsthesisSmall</defName>
        <label>wooden prosthesis (small)</label>
        <labelNoun>a wooden prosthesis (small)</labelNoun>

        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.4</partEfficiency>
            <betterThanNatural>false</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>InstallWoodenProsthesisSmall</defName>
        <label>install wooden prosthesis (small)</label>
        <description>Install a wooden prosthesis (small).</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing wooden prosthesis (small).</jobString>
        <workAmount>400</workAmount>
        <surgerySuccessChanceFactor>2.5</surgerySuccessChanceFactor>
        <skillRequirements>
            <Medicine>2</Medicine>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Cloth</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>WoodLog</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>Cloth</li>
                <li>WoodLog</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Finger</li>
            <li>Toe</li>
            <li>Ear</li>
            <li>Nose</li>
        </appliedOnFixedBodyParts>
        <addsHediff>WoodenProsthesisSmall</addsHediff>
    </RecipeDef>


    <HediffDef ParentName="AddedBodyPartBase">
        <defName>WoodenProsthesisMedium</defName>
        <label>wooden prosthesis (medium)</label>
        <labelNoun>a wooden prosthesis (medium)</labelNoun>

        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.2</partEfficiency>
            <betterThanNatural>false</betterThanNatural>
        </addedPartProps>
    </HediffDef>

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>InstallWoodenProsthesisMedium</defName>
        <label>install wooden prosthesis (medium)</label>
        <description>Install a wooden prosthesis (medium).</description>

        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <jobString>Installing wooden prosthesis (medium).</jobString>
        <workAmount>1000</workAmount>
        <surgerySuccessChanceFactor>1.5</surgerySuccessChanceFactor>
        <skillRequirements>
            <Medicine>3</Medicine>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <categories>
                        <li>Leathers</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>WoodLog</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
                <li>Leathers</li>
            </categories>
            <thingDefs>
                <li>WoodLog</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Hand</li>
            <li>Foot</li>
        </appliedOnFixedBodyParts>
        <addsHediff>WoodenProsthesisMedium</addsHediff>
    </RecipeDef>
</Defs>