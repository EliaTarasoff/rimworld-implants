<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ImplantBase">
        <defName>JawSymbiote</defName>
        <label>jaw symbiote</label>
        <description>Genetic engineers adapted this symbiote from a fish-parasite, which replaces their tongue. It was invented as a low-cost alternative to traditional dental care, on slaver worlds.</description>

        <graphicData>
            <texPath>Things/Item/Health/HealthItemBionic</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.80</drawSize>
        </graphicData>

        <statBases>
            <MarketValue>200</MarketValue>
            <Mass>0.2</Mass>
        </statBases>
        <thingSetMakerTags>
            <li>RewardSpecial</li>
        </thingSetMakerTags>
        <techLevel>Spacer</techLevel>
        <techHediffsTags>
            <li>Advanced</li>
        </techHediffsTags>
    </ThingDef>

    <HediffDef ParentName="AddedBodyPartBase">
        <defName>JawSymbioteHediff</defName>
        <label>jaw symbiote</label>
        <labelNoun>a jaw symbiote</labelNoun>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>0.95</partEfficiency>
        </addedPartProps>
        <spawnThingOnRemoved>JawSymbiote</spawnThingOnRemoved>
    </HediffDef>

    <ThoughtDef>
        <defName>JawSymbioteThought</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>JawSymbioteHediff</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>jaw symbiote</label>
                <description>This thing lets me eat, but I can feel it twitch sometimes.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <RecipeDef ParentName="SurgeryFlesh">
        <defName>InstallJawSymbiote</defName>
        <label>install jaw symbiote</label>
        <description>Install a jaw symbiote.</description>
        <workerClass>Recipe_InstallImplant</workerClass>
        <jobString>Installing jaw symbiote.</jobString>

        <!--Just let it attach to their face. Ick!-->
        <workAmount>100</workAmount>
        <surgerySuccessChanceFactor>1.0</surgerySuccessChanceFactor>
        <deathOnFailedSurgeryChance>0.0</deathOnFailedSurgeryChance>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>JawSymbiote</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>JawSymbiote</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Jaw</li>
        </appliedOnFixedBodyParts>
        <addsHediff>JawSymbioteHediff</addsHediff>
    </RecipeDef>
</Defs>
